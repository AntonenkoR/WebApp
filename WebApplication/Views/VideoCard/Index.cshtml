@model IEnumerable<WebApplication.Models.GameModels.VideoCard>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="card">
        @Html.ActionLink("Create New", "Create", null, new { style = "color: darkblue" })
    </div>
    <div class="card">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { style = "color: darkblue" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { style = "color: darkred" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>