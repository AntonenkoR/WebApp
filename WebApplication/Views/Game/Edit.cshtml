@model WebApplication.Models.Game

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm("Edit", "Game", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.Img)

            <div class="form-group">
                @Html.LabelFor(model => model.Title, new { @class = "col-md-4" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Title)
                    @Html.ValidationMessageFor(model => model.Title)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Publisher, new { @class = "col-md-4" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Publisher)
                    @Html.ValidationMessageFor(model => model.Publisher)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.GenreId, new { @class = "col-md-4" })
                <div class="col-md-10">
                    @Html.DropDownList("GenreId", String.Empty)
                    @Html.ValidationMessageFor(model => model.GenreId)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Date, new { @class = "col-md-4" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Date)
                    @Html.ValidationMessageFor(model => model.Date)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Price, new { @class = "col-md-4" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Price)
                    @Html.ValidationMessageFor(model => model.Price)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Discount, new { @class = "col-md-4" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Discount)
                    @Html.ValidationMessageFor(model => model.Discount)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Img, new { @class = "col-md-4" })
                <div class="col-md-10">
                    <input type="file" id="uploadImage" name="uploadImage" />
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Description, new { @class = "col-md-4" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Description)
                    @Html.ValidationMessageFor(model => model.Description)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.OSId, new { @class = "col-md-4" })
                <div class="col-md-10">
                    @Html.DropDownList("OSId", String.Empty)
                    @Html.ValidationMessageFor(model => model.OSId)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CPUId, new { @class = "col-md-4" })
                <div class="col-md-10">
                    @Html.DropDownList("CPUId", String.Empty)
                    @Html.ValidationMessageFor(model => model.CPUId)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.RAMId, new { @class = "col-md-4" })
                <div class="col-md-10">
                    @Html.DropDownList("RAMId", String.Empty)
                    @Html.ValidationMessageFor(model => model.RAMId)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.VideoCardId, new { @class = "col-md-4" })
                <div class="col-md-10">
                    @Html.DropDownList("VideoCardId", String.Empty)
                    @Html.ValidationMessageFor(model => model.VideoCardId)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DirectXId, new { @class = "col-md-4" })
                <div class="col-md-10">
                    @Html.DropDownList("DirectXId", String.Empty)
                    @Html.ValidationMessageFor(model => model.DirectXId)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.HDD, new { @class = "col-md-4" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.HDD)
                    @Html.ValidationMessageFor(model => model.HDD)
                </div>
            </div>

            <div class="form-group">
                <div style="padding:20px">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>

    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
